# NASA Space Biology Engine - AWS Environment Variables
# Copy this file to .env and fill in your actual values

# ================================
# AWS Configuration
# ================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# ================================
# API Keys
# ================================
MISTRAL_API_KEY=your-mistral-api-key-here

# ================================
# Database Configuration
# ================================
POSTGRES_DB=nasa_biology
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password
DATABASE_URL=postgresql://postgres:your-secure-postgres-password@your-rds-endpoint:5432/nasa_biology

# ================================
# Neo4j Configuration
# ================================
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-secure-neo4j-password
NEO4J_URI=bolt://your-neo4j-endpoint:7687

# ================================
# Redis Configuration
# ================================
REDIS_URL=redis://your-elasticache-endpoint:6379

# ================================
# Application URLs
# ================================
API_URL=https://your-backend-alb-url.com
FRONTEND_URL=https://your-frontend-cloudfront-url.com

# ================================
# AWS Services (Optional)
# ================================
# S3 Bucket for data storage
S3_BUCKET_NAME=nasa-space-biology-data
S3_REGION=us-east-1

# CloudWatch Log Groups
LOG_GROUP_FRONTEND=/ecs/nasa-frontend
LOG_GROUP_BACKEND=/ecs/nasa-backend
LOG_GROUP_DATA_PIPELINE=/ecs/nasa-data-pipeline

# ================================
# ECS Configuration
# ================================
ECS_CLUSTER_NAME=nasa-space-biology
ECS_SERVICE_FRONTEND=nasa-frontend-service
ECS_SERVICE_BACKEND=nasa-backend-service
ECS_SERVICE_DATA_PIPELINE=nasa-data-pipeline-service

# ================================
# Security
# ================================
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# ================================
# Monitoring & Alerts
# ================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
EMAIL_ALERTS=your-email@example.com

# ================================
# Development/Testing
# ================================
NODE_ENV=production
PYTHON_ENV=production
LOG_LEVEL=info