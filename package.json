{
  "name": "nasa-space-biology-engine",
  "version": "1.0.0",
  "description": "NASA Space Biology Knowledge Engine - 2025 Space Apps Challenge",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:data\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev", 
    "dev:data": "cd data-pipeline && python -m uvicorn main:app --reload --port 8003",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm start",
    "test": "concurrently \"npm run test:frontend\" \"npm run test:backend\"",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "lint": "concurrently \"npm run lint:frontend\" \"npm run lint:backend\"",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "setup": "npm run setup:frontend && npm run setup:backend && npm run setup:data",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && npm install", 
    "setup:data": "cd data-pipeline && pip install -r requirements.txt",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/nasa-space-biology-engine"
  },
  "keywords": [
    "nasa",
    "space-biology",
    "knowledge-engine",
    "ai",
    "machine-learning",
    "data-visualization",
    "space-apps-challenge"
  ],
  "author": "NASA Space Apps Challenge Team",
  "license": "MIT"
}